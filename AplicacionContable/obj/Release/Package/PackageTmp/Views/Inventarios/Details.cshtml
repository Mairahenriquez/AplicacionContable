@model AplicacionContable.Entities.vw_inventarios_Model
@{
    ViewBag.Title = "Inventarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row tema">
        <div class="col-12 mt-4">
            <h1 class="h3 mt-4 text-gray-800">Inventario # @Model.PK_codigo </h1>
            <hr />
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-12 mb-2">
            <label class="form-label">Identificador:</label><br />
            <label class="form-label bold">@Model.identificador</label>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 mb-2">
            <label class="form-label">Descripción:</label><br />
            <label class="form-label bold">@Model.descripcion</label>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 mb-2">
            <label class="form-label">Fecha de vencimiento:</label><br />
            <label class="form-label bold">@(Model.fecha_vencimiento?.ToString("yyyy-MM-dd"))</label>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 mb-2">
            <label class="form-label">Cuenta contable inventarios:</label><br />
            <label class="form-label bold">@Model.cuenta_contable_inventarios</label>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 mb-2">
            <label class="form-label">Cuenta contable costo de venta: </label><br />
            <label class="form-label bold">@Model.cuenta_contable_costo_venta</label>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 mb-2">
            <label class="form-label">Cuenta contable ingreso por venta: </label><br />
            <label class="form-label bold">@Model.cuenta_contable_ingreso_venta</label>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 mb-2">
            <label class="form-label">Observaciones: </label><br />
            <label class="form-label bold">@Model.observaciones</label>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 mb-2">
            <label>Estado:</label><br />
            <label style="color:@Model.estado_color"><i class="fa fa-circle"></i></label>
            <label class="form-label bold">@Model.estado</label>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-12 mb-2">
            <label class="form-label">Comprable: </label><br />
            <div class="form-check">
                <input id="comprable" name="comprable" value="" type="checkbox" class="form-check-input" checked="@Model.comprable" disabled />
            </div>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 mb-2">
            <label class="form-label">Vendible: </label><br />
            <div class="form-check">
                <input id="vendible" name="vendible" value="" type="checkbox" class="form-check-input" checked="@Model.vendible" disabled />
            </div>
        </div>
    </div>
</div>

@section botones{
    <a href="/Inventarios/Index" class="btn btn-outline-secondary"><i class="fas fa-chevron-left"></i><span class="d-none d-sm-inline"> Inventarios</span></a>
    <a href="~/Inventarios/Create" class="btn btn-outline-primary"><i class="fa-solid fa-plus"></i><span class="d-none d-sm-inline"> Nuevo</span></a>
    <a href="~/Inventarios/Edit/@Model.PK_codigo" class="btn btn-outline-primary"><i class="fa-solid fa-pen-to-square"></i><span class="d-none d-sm-inline"> Editar</span></a>
    <div class="btn-group dropup">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fa-solid fa-list"></i> Opciones
        </button>
        <ul class="dropdown-menu">
            @if (Model.FK_estado == 1)
            {
                <li><a href="#" class="dropdown-item" onclick="return sweetAlertConfirm2(Desactivar,'¿Desea desactivar el inventario?');"><i class="fa-solid fa-circle-check"></i> Desactivar</a> </li>
            }
            else
            {
                <li><a href="#" class="dropdown-item" onclick="return sweetAlertConfirm2(Activar,'¿Desea activar el inventario?');"><i class="fa-solid fa-circle-check"></i> Activar</a> </li>
            }
        </ul>
    </div>
}

@section scripts{
    <script>

        //Activar.
        function Desactivar() {
            $.ajax({
                type: "GET",
                url: "../../Inventarios/Desactivar?id=@Model.PK_codigo",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                complete: function () {
                    location.reload();
                },
                error: function (response) {
                    //alert(response);
                },
            });
        }

        function Activar() {
            $.ajax({
                type: "GET",
                url: "../../Inventarios/Activar?id=@Model.PK_codigo",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                complete: function () {
                    location.reload();
                },
                error: function (response) {
                    //alert(response);
                },
            });
        }
    </script>
}




